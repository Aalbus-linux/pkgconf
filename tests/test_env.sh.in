export PATH="$(atf_get_srcdir)/../:${PATH}"
selfdir="@abs_top_srcdir@/tests"
PATH_SEP=":"
SYSROOT_DIR="${selfdir}/test"
if [ "$(uname -s)" = "Msys" ]; then
	PATH_SEP=";"
fi

prefix="@prefix@"
exec_prefix="@exec_prefix@"
datarootdir="@datarootdir@"
pcpath="@PKGCONFIGDIR@"

tests_init()
{
	TESTS="$@"
	export TESTS
	for t ; do
		atf_test_case $t
	done
}

atf_init_test_cases() {
	for t in ${TESTS}; do
		atf_add_test_case $t
	done
}
